<!-- indent:2
 Because XML as a layout language requires deep nesting.
-->

<GuiXml>
  <Controls>
    <TopLevelControl
        hidden="true"
        name="ZZCompanionUI"
        movable="true"
        mouseEnabled="true"
        allowBringToTop="true"
        clampedToScreen="true"
        >
      <Dimensions x="250" y="400" />  <!--180  300   400-->

      <Controls>
        <Backdrop name="$(parent)BG"
            centerColor="000000"
            edgeColor="202020"
            >
          <AnchorFill />
          <Edge edgeSize="2" />
        </Backdrop>

        <Label name="$(parent)Title"
          text="ZZCompanion"
          font="ZoFontGame"
          color="CCCCCC" >
          <Anchor relativeTo="$(parent)"
              offsetX="5"
              offsetY="5"
              relativePoint="TOPLEFT"
              point="TOPLEFT" />
          <Dimensions x="200" y="320" />
        </Label>

      </Controls>
    </TopLevelControl>

    <TopLevelControl name="ZZCompanionUIRow"
      virtual="true"
      hidden="true"
      mouseEnabled="true"
      >
      <Controls>
      <Label name="$(parent)Cooldown"
          font="ZoFontGame"
          horizontalAlignment="RIGHT"
          hidden="false"
          text="9m45s"
          >
          <Anchor
              point="TOPLEFT"
              relativeTo="$(parent)"
              relativePoint="TOPLEFT"
              />
          <Anchor
              point="BOTTOMRIGHT"
              relativeTo="$(parent)"
              relativePoint="BOTTOMLEFT"
              offsetX="50"
              />
        </Label>


      <Label name="$(parent)Name"
          font="ZoFontGame"
          horizontalAlignment="LEFT"
          hidden="false"
          >
          <Anchor
              point="TOPLEFT"
              relativeTo="$(parent)Cooldown"
              relativePoint="TOPRIGHT"
              offsetX="5"
              />
          <Anchor
              point="BOTTOMRIGHT"
              relativeTo="$(parent)"
              relativePoint="BOTTOMRIGHT"
              />
        </Label>

      </Controls>
    </TopLevelControl>


  </Controls>
</GuiXml>
